@{
    ViewData["Title"] = "Home Page";
}

<link href="./Syncfusion/ej2/material.css" rel="stylesheet" />

<div class="col-md-6 Card content">
<div class="container" style="min-width:100%">
       <div class="row">
            <div class="col-md-12">
                <p class="text-center">
                    Saved Connections
                </p>
            </div>
            <hr/>
            <div class="col-md-12">
                <div class="control-section">
                    <div class="content-wrapper">
                        <div id="Grid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr/>
        <div class="row rowPaddingLgin">
            <input id="host" />
        </div>
        <div class="row rowPaddingLgin">
            <div class="col-md-6">
                <input id="username" />
            </div>
            <div class="col-md-6">
                <input id="password" />
            </div>
        </div>
        <div class="row">
            <hr/>
        </div>
         <div class="centerButtons rowPaddingLgin">
            <div class="row">
                <div class="centerButtons rowPaddingLgin">
                    <button id="BtnConnect" onclick="LoginAttempt()">Connect</button>
                
                </div>
            </div>
            <div class="row">
                <div class="centerButtons rowPaddingLogin">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="rememberMe">
                        <label class="custom-control-label" for="rememberMe">Remember Connection</label>
                    </div>
                </div>
            </div>
        </div>
</div>
</div>
<script src="./js/Index.js"></script>
