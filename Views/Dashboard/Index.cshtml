@{
    ViewData["Title"] = "Sql server dashboard";
    Layout = "_DashboardLayout";
    var databases = ViewData["Connections"] as List<string>;
    var Id = ViewData["ConnectionId"] as string; 
}
<style>
    p{
        color:white;
        font-style: italic;
    }
    a{
        color: white;
        text-decoration: none;

    }
</style>


<div class="col-md-11 Card content">
    <div class="row" style="padding:50px;">


    @foreach(var database in databases){
        <div class="col-md-2">
            <div class="row">
                <img style="width:100px;height:100px;" src="~/Images/DB.svg"/>
            </div>
            <div class="row">
                <p>@database</p>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a href="#" onclick="GenerateSchema('@database','@Id')"><i class="fab fa-react"></i> Generate Schema</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>

<div class="modal" tabindex="-1" id="GenerateModal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Schema Generator</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row ">
                      <div class="col-lg-8 control-section">
                        <div class="control_wrapper">
                            <!-- Initialize Uploader -->
                            <input type='file' id='fileupload' name='UploadFiles'/>
                        </div>
                    </div>
               </div>
                <div class="row ">
                      <textarea id="GeneratedSchema"  class="GeneratedText" style="margin-top: 0px;margin-bottom: 0px;width: 100%;height: 532px;"></textarea>
                </div>
                <div class="row">
                        <button style="margin-left:40%; margin-right:40%; margin-top:10%;" id="btnGenerate" onclick="GenerateFile()"></button>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


